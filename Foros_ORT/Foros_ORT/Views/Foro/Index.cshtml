@model Foros_ORT.Models.ModelosForo.ModeloIndiceForo

<h1>Foros</h1>

<table class="table table-hover" id="modeloIndexForo" style="background-color:blanchedalmond">
    <tbody>
        <tr>
            <td>

            </td>
            <td>
                <h3>Nombre</h3>
            </td>
            <td>
                <h3>Descripcion</h3>
            </td>
        </tr>

        @foreach (var foro in Model.ListaForo)
        {
            <tr>
                <td>
                    <img style="width:150px; height:100px; display:inline-block;" class="imagenForo" src="../@foro.UrlImagen" />
                </td>
                <td>
                    <a asp-controller="Foro" asp-action="Tema" asp-route-id="@foro.Id">
                        @foro.Nombre
                    </a>
                </td>
                <td>
                    @foro.Descripcion
                </td>
            </tr>
        }
    </tbody>
</table> 