@model Foros_ORT.Models.ModelosPosteo.ModeloNuevoPosteo

<h1>Nuevo Posteo de @Model.NombreForo</h1>

<form asp-action="AgregarPosteo" method="post" id="formularioAgregarPosteo">

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contenido"></label>
        <input asp-for="Contenido" class="form-control" />
    </div>
    <button type="submit" id="botonSubirPosteo" class="btn btn-outline-dark">
        Subir Posteo
    </button>
    <input asp-for="IdForo" type="hidden" />

</form>